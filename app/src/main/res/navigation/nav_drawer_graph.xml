<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_drawer_graph"
    app:startDestination="@id/homeFragment">

    <action android:id="@+id/action_global_navigation_drawer_header"
        app:destination="@id/profileFragment"/>

    <fragment
        android:id="@+id/homeFragment"
        android:name="bloodpair.activities.home.fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_updateProfileFragment"
            app:destination="@id/updateProfileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_trackOrderFragment"
            app:destination="@id/trackOrderFragment" />
        <action
            android:id="@+id/action_homeFragment_to_confirmDeliveryFragment"
            app:destination="@id/confirmDeliveryFragment" />
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_helpFragment"
            app:destination="@id/helpFragment" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_homeFragment_to_shoppingCartFragment"
            app:destination="@id/shoppingCartFragment" />
    </fragment>
    <fragment
        android:id="@+id/updateProfileFragment"
        android:name="bloodpair.activities.home.fragments.UpdateProfileFragment"
        android:label="Update Profile"
        tools:layout="@layout/fragment_update_profile" />
    <fragment
        android:id="@+id/trackOrderFragment"
        android:name="bloodpair.activities.home.fragments.TrackOrderFragment"
        android:label="Track Order"
        tools:layout="@layout/fragment_track_order" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="bloodpair.activities.home.fragments.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="bloodpair.activities.home.fragments.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_shoppingCartFragment"
            app:destination="@id/shoppingCartFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="bloodpair.activities.home.fragments.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/helpFragment"
        android:name="bloodpair.activities.home.fragments.HelpFragment"
        android:label="Help"
        tools:layout="@layout/fragment_help" />
    <fragment
        android:id="@+id/confirmDeliveryFragment"
        android:name="bloodpair.activities.home.fragments.ConfirmDeliveryFragment"
        android:label="Confirm Delivery"
        tools:layout="@layout/fragment_confirm_delivery" />
    <fragment
        android:id="@+id/shoppingCartFragment"
        android:name="bloodpair.activities.home.fragments.cart.ShoppingCartFragment"
        android:label="Shopping Cart"
        tools:layout="@layout/fragment_shopping_cart" >
        <action
            android:id="@+id/action_shoppingCartFragment_to_deliveryAddressFragment"
            app:destination="@id/deliveryAddressFragment" />
    </fragment>
    <fragment
        android:id="@+id/deliveryAddressFragment"
        android:name="bloodpair.activities.home.fragments.cart.DeliveryAddressFragment"
        android:label="Delivery Address"
        tools:layout="@layout/fragment_delivery_address" >
        <action
            android:id="@+id/action_deliveryAddressFragment_to_paymentFragment"
            app:destination="@id/paymentFragment" />
    </fragment>
    <fragment
        android:id="@+id/paymentFragment"
        android:name="bloodpair.activities.home.fragments.cart.PaymentFragment"
        android:label="Payment"
        tools:layout="@layout/fragment_payment" >
        <action
            android:id="@+id/action_paymentFragment_to_orderProcessedFragment"
            app:destination="@id/orderProcessedFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderProcessedFragment"
        android:name="bloodpair.activities.home.fragments.cart.OrderProcessedFragment"
        android:label="Order Processed"
        tools:layout="@layout/fragment_order_processed" >
        <action
            android:id="@+id/action_orderProcessedFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <activity
        android:id="@+id/homeActivity"
        android:name="bloodpair.activities.home.HomeActivity"
        android:label="HomeActivity" />
</navigation>