<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/pad2"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:src="@drawable/password"
            android:textColor="@color/design_default_color_primary"
            android:textSize="30sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/pad2"
            android:textStyle="bold"
            android:textSize="28sp"
            android:id="@+id/txv_forgot_password"
            android:text="@string/forgot_password"
            android:textColor="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txv_enter_number"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/pad1"
            android:layout_marginBottom="@dimen/pad2"
            android:text="@string/forgot_password_text"
            android:gravity="center"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/verification_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/gray"
                android:inputType="number" />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/verification_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:background="@color/gray"
                android:inputType="number" />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/verification_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:background="@color/gray"
                android:inputType="number" />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/verification_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:background="@color/gray"
                android:inputType="number" />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/verification_5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:background="@color/gray"
                android:inputType="number" />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/verification_6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:background="@color/gray"
                android:inputType="number" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cd_enter_number_input"
            android:layout_marginVertical="@dimen/pad1"
            android:backgroundTint="@color/secondary"
            app:cardCornerRadius="@dimen/pad2">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary"
                android:layout_margin="2dp"
                app:cardCornerRadius="@dimen/pad2">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/email_container"
                    android:layout_width="match_parent"
                    android:textColorHint="@color/white"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginBottom="-2dp"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/primary"
                        android:hint="@string/enter_number"
                        android:inputType="phone" />
                </com.google.android.material.textfield.TextInputLayout>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_marginTop="@dimen/pad1"
            app:cardCornerRadius="@dimen/pad2">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:backgroundTint="@color/secondary"
                app:cardCornerRadius="@dimen/pad2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_reset_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/secondary"
                    android:padding="10dp"
                    android:text="@string/reset_password" />

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>