<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#04172A"
    android:paddingTop="33dp"
    android:paddingBottom="35dp"
    android:paddingStart="18dp"
    android:paddingEnd="18dp"
    tools:context=".activities.home.fragments.cart.ShoppingCartFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#122332"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:id="@+id/your_cart"
                style="@style/your_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dmsans_regular"
                android:text="@string/your_cart"
                android:textAppearance="@style/your_cart" />

            <TextView
                android:id="@+id/no_of_items"
                style="@style/your_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/items_background"
                android:fontFamily="@font/dmsans_regular"
                android:padding="3dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/items" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        app:cardBackgroundColor="#122332"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:paddingStart="19dp"
            android:paddingEnd="10dp"
            android:paddingBottom="11dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/lab_img"
                android:layout_width="24dp"
                android:layout_height="23dp"
                android:src="@drawable/image9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lab_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:fontFamily="@font/dmsans_bold"
                android:text="@string/perry_lab"
                android:textSize="15sp"
                android:textAppearance="@style/your_cart"
                app:layout_constraintBottom_toBottomOf="@+id/lab_img"
                app:layout_constraintStart_toEndOf="@+id/lab_img"
                app:layout_constraintTop_toTopOf="@+id/lab_img" />

            <androidx.cardview.widget.CardView
                android:layout_width="31dp"
                android:layout_height="33dp"
                android:layout_marginTop="8dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="#04172A"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lab_img">

                <ImageView
                    android:id="@+id/blood_drop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="6dp"
                    app:srcCompat="@drawable/ic_blood_drop" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:text="@string/description"
                android:textAppearance="@style/your_cart"
                android:fontFamily="@font/dmsans_regular"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/lab_name"
                app:layout_constraintStart_toEndOf="@+id/lab_name"
                app:layout_constraintTop_toTopOf="@+id/lab_name" />

            <TextView
                android:id="@+id/no_of_pints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/dmsans_regular"
                android:text="@string/two"
                android:textAppearance="@style/your_cart"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView"
                app:layout_constraintEnd_toStartOf="@+id/textView"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/description"
                app:layout_constraintTop_toTopOf="@+id/textView"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/pints_of"
                android:textAppearance="@style/your_cart"
                android:fontFamily="@font/dmsans_regular"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/description"
                app:layout_constraintStart_toStartOf="@+id/description"
                app:layout_constraintTop_toBottomOf="@+id/description" />

            <TextView
                android:id="@+id/blood_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/opositive"
                android:textAppearance="@style/your_cart"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="@+id/description"
                app:layout_constraintStart_toEndOf="@+id/textView"
                android:fontFamily="@font/dmsans_regular"
                app:layout_constraintTop_toTopOf="@+id/textView" />

            <TextView
                android:id="@+id/blood_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/thirty_thousand"
                android:fontFamily="@font/dmsans_regular"
                android:textAppearance="@style/your_cart"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/blood_group"
                app:layout_constraintStart_toStartOf="@+id/no_of_pints"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>